{
    "version": 2,
    "builds": [
        {
            "src": "./dist/server.js",
            "use": "@vercel/node", 
            "config": { "includeFiles": ["dist/**"] }
        }
    ],
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "./dist/server.js"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                }
            ]
        },
        {
            "source": "/mo-news.vercel.app/(.*)",
            "headers": [
                {
                    "key": "Access-Control-Allow-Origin",
                    "value": "*"
                }
            ]
        }
    ]
}